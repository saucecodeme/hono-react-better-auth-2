{
  "name": "hono-react-better-auth",
  "scripts": {
    "server": "bun run --hot server/index.ts",
    "client": "cd client && bun run dev",
    "dev": "concurrently \"bun run server\" \"bun run client\"",
    "db:up": "docker compose up -d",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run ./scripts/seed-local-db.script.ts",
    "open-auth-docs": "open-cli http://localhost:3000/api/auth/reference",
    "build": "bun build ./server/index.ts --outdir ./dist/server --target bun && cd client && bun run build",
    "start": "bun run ./dist/server/index.js",
    "docker:build": "docker build -t sloth-web-app .",
    "docker:run": "docker run -p 3000:3000 --env-file .env -e DATABASE_URL='postgresql://user:password@host.docker.internal:5432/todos' sloth-web-app"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.992.0",
    "@hono/zod-validator": "^0.7.6",
    "@neondatabase/serverless": "^1.0.2",
    "better-auth": "^1.4.7",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.11.1",
    "pg": "^8.16.3",
    "sharp": "^0.34.5",
    "typescript": "^5.9.3",
    "ws": "^8.19.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/pg": "^8.16.0",
    "@types/ws": "^8.18.1",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.9",
    "drizzle-seed": "^0.3.1",
    "open-cli": "^8.0.0"
  }
}
