{
  "name": "hono-react-better-auth",
  "scripts": {
    "server": "bun run --hot server/index.ts",
    "client": "cd client && bun run dev",
    "dev": "concurrently \"bun run server\" \"bun run client\"",
    "db:up": "docker compose up -d",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run ./scripts/seed-local-db.script.ts",
    "open-auth-docs": "open-cli http://localhost:3000/api/auth/reference",
    "build": "bun build ./server/index.ts --outdir ./dist/server --target bun && cd client && bun run build",
    "start": "bun run ./dist/server/index.js"
  },
  "dependencies": {
    "better-auth": "^1.4.7",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.1",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/pg": "^8.16.0",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.8",
    "drizzle-seed": "^0.3.1",
    "open-cli": "^8.0.0"
  }
}
